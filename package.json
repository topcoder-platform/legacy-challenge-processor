{
  "name": "legacy-challenge-processor",
  "version": "1.0.0",
  "description": "Topcoder - Legacy Challenge Processor",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "mock-api": "NODE_ENV=test node test/mock/mock",
    "test": "nyc --reporter=html --reporter=text mocha test/unit/test.js --timeout 20000 --exit",
    "e2e": "nyc --reporter=html --reporter=text mocha test/e2e/test.js --timeout 20000 --exit"
  },
  "author": "TCSCODER",
  "license": "none",
  "devDependencies": {
    "should": "^13.2.3",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "standard": "^14.3.3"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.2",
    "async-mutex": "^0.1.4",
    "bluebird": "^3.7.2",
    "config": "^3.3.1",
    "get-parameter-names": "^0.3.0",
    "http-json-response": "^1.0.1",
    "lodash": "^4.17.19",
    "no-kafka": "^3.4.3",
    "q": "^1.5.1",
    "showdown": "^1.9.1",
    "superagent": "^5.2.2",
    "tc-core-library-js": "github:appirio-tech/tc-core-library-js.git#v2.6.4",
    "topcoder-bus-api-wrapper": "topcoder-platform/tc-bus-api-wrapper.git",
    "topcoder-healthcheck-dropin": "^1.0.3",
    "winston": "^3.2.1"
  },
  "engines": {
    "node": "12.x"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "nyc": {
    "exclude": [
      "test/mock/*.js",
      "test/common/*.js",
      "test/unit/test.js",
      "test/e2e/test.js"
    ]
  }
